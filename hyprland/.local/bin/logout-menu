#!/bin/bash
# Hyprland Logout Menu
# Save as ~/.local/bin/logout-menu and make executable: chmod +x ~/.local/bin/logout-menu

options="Logout\nRestart\nShutdown\nSuspend\nLock"

choice=$(echo -e "$options" | rofi -dmenu -p "Power Menu" -theme-str 'window {width: 200px; height: 250px;}')

case "$choice" in
    "Logout")
        hyprctl dispatch exit
        ;;
    "Restart")
        systemctl reboot
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
    "Suspend")
        ~/.local/bin/safe-suspend
        ;;
    "Lock")
        ~/.local/bin/blur-lock
        ;;
    *)
        # Do nothing if cancelled
        ;;
esac
