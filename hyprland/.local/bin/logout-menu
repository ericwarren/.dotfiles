#!/bin/bash
# Hyprland Logout Menu
# Save as ~/.local/bin/logout-menu and make executable: chmod +x ~/.local/bin/logout-menu

options="‚èª Shutdown\n‚≠Æ Restart\n‚á† Logout\n‚èæ Suspend\nüîí Lock"

choice=$(echo -e "$options" | rofi -dmenu -p "Power Menu" -no-show-icons -theme-str 'window {width: 300px; height: 280px;}')

case "$choice" in
    "‚á† Logout")
        hyprctl dispatch exit
        ;;
    "‚≠Æ Restart")
        systemctl reboot
        ;;
    "‚èª Shutdown")
        systemctl poweroff
        ;;
    "‚èæ Suspend")
        ~/.local/bin/safe-suspend
        ;;
    "üîí Lock")
        ~/.local/bin/blur-lock
        ;;
    *)
        # Do nothing if cancelled
        ;;
esac
