# General aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'

# Modern CLI tools (use if available, fallback to standard)
if command -v eza &> /dev/null; then
    alias ls='eza'
    alias ll='eza -la --git'
    alias la='eza -a'
    alias lt='eza -T'  # tree view
fi

if command -v bat &> /dev/null; then
    alias cat='bat --paging=never'
    alias catp='bat'  # cat with pager
elif command -v batcat &> /dev/null; then
    alias bat='batcat'
    alias cat='batcat --paging=never'
    alias catp='batcat'  # cat with pager
fi

if command -v rg &> /dev/null; then
    alias ripgrep='rg'
fi

# Git - just shortcut to git itself, use .gitconfig for git aliases
alias g='git'

# Development aliases
alias py='python3'
alias pip='pip3'
alias nv='nvim'
alias vim='nvim'

# .NET aliases
alias dn='dotnet'
alias dnr='dotnet run'
alias dnb='dotnet build'
alias dnt='dotnet test'

# Node/npm aliases
alias ni='npm install'
alias ns='npm start'
alias nt='npm test'
alias nr='npm run'

# Qutebrowser
alias qb='~/.local/share/qutebrowser-env/bin/qutebrowser >/dev/null 2>&1 & disown'
