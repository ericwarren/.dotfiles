# General aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'

# Modern CLI tools (use if available, fallback to standard)
if command -v exa &> /dev/null; then
    alias ls='exa'
    alias ll='exa -la --git'
    alias la='exa -a'
    alias lt='exa -T'  # tree view
fi

if command -v bat &> /dev/null; then
    alias cat='bat --paging=never'
    alias catp='bat'  # cat with pager
fi

# Git - just shortcut to git itself, use .gitconfig for git aliases
alias g='git'

# Development aliases
alias py='python3'
alias pip='pip3'
alias nv='nvim'
alias vim='nvim'

# .NET aliases
alias dn='dotnet'
alias dnr='dotnet run'
alias dnb='dotnet build'
alias dnt='dotnet test'

# Rust aliases
alias cr='cargo run'
alias cb='cargo build'
alias ct='cargo test'
alias cc='cargo check'

# Node/npm aliases
alias ni='npm install'
alias ns='npm start'
alias nt='npm test'
alias nr='npm run'

# Qutebrowser
alias qb='~/.local/share/qutebrowser-env/bin/qutebrowser >/dev/null 2>&1 & disown'
