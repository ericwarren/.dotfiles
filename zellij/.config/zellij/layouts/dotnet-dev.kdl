// ~/.config/zellij/layouts/dotnet-dev.kdl
// Optimized layout for .NET development with the exact 3-pane setup you want:
// Left: Neovim (65%) | Right: Claude Code + dotnet watch (35% split vertically)

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        children
    }

    tab name="Development" focus=true {
        pane split_direction="vertical" {
            // Left pane: Neovim (65%)
            pane size="65%" name="neovim" focus=true

            // Right side (35%) split horizontally
            pane size="35%" split_direction="horizontal" {
                // Top right: Claude Code terminal (75% of right side)
                pane size="75%" name="claude-code"

                // Bottom right: dotnet watch (25% of right side)
                pane size="25%" name="dotnet-watch"
            }
        }
    }

    tab name="Git" {
        pane name="git-status"
    }

    tab name="Tests" {
        pane split_direction="horizontal" {
            pane size="70%" name="test-watch"
            pane size="30%" name="test-manual"
        }
    }

    tab name="Database" {
        pane split_direction="horizontal" {
            pane size="50%" name="ef-tools"
            pane size="50%" name="packages"
        }
    }
}
